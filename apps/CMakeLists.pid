    EXAMPLE_APPLICATION
    NAME ${app}
    DIRECTORY ${app}
  )

  declare_PID_Component_Dependency(
    COMPONENT ${app}
    NATIVE open-phri
  )

  declare_PID_Component_Dependency(
    COMPONENT ${app}
    NATIVE open-phri-vrep-driver
  )
endfunction()
